---
import { type Lang, useTranslations } from '../utils/i18n';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();

const navItems = [
  { href: `/${lang}/`, label: t('nav.home') },
  { href: `/${lang}/oferta/`, label: t('nav.services') },
  { href: `/${lang}/o-nas/`, label: t('nav.about') },
  { href: `/${lang}/kontakt/`, label: t('nav.contact') },
];
---

<footer class="bg-neutral-dark dark:bg-stone-900 text-white">
  <div class="container-wide py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12">

      <!-- Brand -->
      <div class="md:col-span-1">
        <img
          src="/images/logo.png"
          alt="Archigiliti"
          class="h-10 w-auto mb-4 brightness-0 invert"
        />
        <p class="text-sm text-stone-400 leading-relaxed">
          {t('footer.description')}
        </p>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-4 text-stone-300">
          {t('footer.navigation')}
        </h4>
        <ul class="space-y-2">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-sm text-stone-400 hover:text-white transition-colors"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-sm font-semibold uppercase tracking-wider mb-4 text-stone-300">
          {t('footer.contact')}
        </h4>
        <ul class="space-y-2">
          <li>
            <a
              href="mailto:piotr.andrasz@archigiliti.com"
              class="text-sm text-stone-400 hover:text-white transition-colors"
            >
              piotr.andrasz@archigiliti.com
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 pt-8 border-t border-stone-700 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-sm text-stone-500">
        &copy; {currentYear} Archigiliti. {t('footer.rights')}
      </p>
      <div class="flex gap-6">
        <a
          href={`/${lang}/polityka-prywatnosci/`}
          class="text-sm text-stone-500 hover:text-stone-300 transition-colors"
        >
          {t('footer.privacy')}
        </a>
      </div>
    </div>
  </div>
</footer>
