---
interface Props {
  number: number;
  title: string;
  description: string;
}

const { number, title, description } = Astro.props;
---

<div class="flex gap-4 md:gap-6">
  <div class="flex-shrink-0 w-10 h-10 md:w-12 md:h-12 rounded-full bg-primary text-white flex items-center justify-center font-semibold text-lg">
    {number}
  </div>
  <div class="pt-1">
    <h3 class="text-lg font-semibold text-neutral-dark dark:text-neutral-light mb-2">{title}</h3>
    <p class="text-neutral-mid dark:text-stone-400 text-sm leading-relaxed">{description}</p>
  </div>
</div>
