---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
---

<BaseLayout
  title="404 — Strona nie znaleziona | Archigiliti"
  description="Strona, której szukasz, nie istnieje."
>
  <Section variant="light" class="min-h-[60vh] flex items-center">
    <div class="text-center max-w-xl mx-auto">
      <p class="text-8xl font-bold text-primary mb-4">404</p>
      <h1 class="text-2xl md:text-3xl mb-4">Strona nie znaleziona</h1>
      <p class="text-neutral-mid mb-8">
        Strona, której szukasz, nie istnieje lub została przeniesiona.
      </p>
      <a href="/" class="btn-primary">
        Wróć na stronę główną
      </a>
    </div>
  </Section>
</BaseLayout>
